<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.LoginScreenActivity">

        <ImageView
            android:id="@+id/img_backArrow"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_margin="@dimen/_12sdp"
            app:srcCompat="@drawable/img_left_arrow" />

        <TextView
            android:id="@+id/tvCreateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Profile"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCreateProfile"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    app:cardCornerRadius="@dimen/_55sdp"
                    android:layout_gravity="center"
                    android:backgroundTint="#e8dbd9"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/img_camera"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Profile"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#4D4A4A"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10sdp"/>

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/bg_orange_corner"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Last Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_orange_corner"
                    android:ems="10"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_orange_corner"
                    android:ems="10"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:padding="@dimen/_10sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="#FF7F5D"
                    android:backgroundTint="#FF7F5D"
                    app:cardCornerRadius="@dimen/_3sdp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pick Your Current Location"
                        android:paddingVertical="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_location"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/_10sdp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#665D5D"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7sdp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Pin Code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/bg_orange_corner"
                    android:ems="10"
                    android:hint="Select Post Code Or Address"
                    android:maxLength="6"
                    android:inputType="phone"
                    android:padding="@dimen/_10sdp" />

                <RelativeLayout
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_btn_back_cleanup"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:foreground="?android:attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/montserrat_bold"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>